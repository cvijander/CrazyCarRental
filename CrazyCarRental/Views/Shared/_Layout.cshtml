<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CrazyCarRental</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CrazyCarRental.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Car" asp-action="Index">
                    <img src="~/images/logo.png" alt="Logo" style="height:50px;">CrazyCarRental</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Car" asp-action="Index">Cars</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Booking" asp-action="Index">Booking</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Review" asp-action="Index">Review</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container footer-text">
            <div class="row">
                <div class="col-md-4">
                    <img src="~/images/logo.png" alt="logo"   />
                </div>
                <div class="col-md-1">
                    <ul class="list-unstyled">
                        <li><a asp-area="" asp-controller="Booking" asp-action="Index" class="text-decoration-none">Booking</a></li>                                              
                    </ul>
                </div>
                <div class="col-md-1">
                    <ul class="list-unstyled">                        
                        <li><a asp-area="" asp-controller="Review" asp-action="Index" class="text-decoration-none">Review</a></li>
                    </ul>
                </div>
                <div class="col-md-1">
                    <ul class="list-unstyled">                        
                        <li><a asp-area="" asp-controller="User" asp-action="Index" class="text-decoration-none">User</a></li>                        
                    </ul>
                </div>
                <div class="col-md-1">
                    <ul class="list-unstyled">                        
                        <li><a asp-area="" asp-controller="Car" asp-action="Index" class="text-decoration-none">List of cars</a></li>
                    </ul>
                </div>
            </div>
            <div class="row ">
                <div class="col-md-6 footer-copy justify-content-center flex-fill" >
                    <p>&copy; 2024 - Cvijander - CrazyCarRental - Sva prava zadrzana</p>
                </div>
            </div>             
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
